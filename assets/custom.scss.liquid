body {
	font-family: 'Montserrat', sans-serif;
}

#story-of-montessory {
	background-color: #ECE5DB;;
	color: #B58C67;
}

.container-custom {
	width: 1100px;
	margin: auto;
}


/* Home text section */

#home-text {
	padding-top: 80px;
	padding-bottom: 80px;
}

#home-text .row {
	text-align: center;
}

#home-text .text-lines {
	margin-bottom: 100px;
	font-family: 'Playfair Display', serif;
	font-weight: 400;
	font-size: 24px;
	line-height: 32px;
	letter-spacing: 10%;
}

#home-text .txt-line {
	margin: 0;
}

#home-text .europe-span {
	font-weight: 600;
}

#home-text .compact-text {
	width: 392px;
	margin: auto;
	font-size: 18px;
	line-height: 27px;
	font-weight: 500;
	letter-spacing: 12%;
	text-transform: uppercase;
}


/* Featured products section */

#featur-prods h2 {
	margin-bottom: 50px;
	font-family: 'Playfair Display', serif;
	font-weight: 600;
	font-size: 24px;
	line-height: 32px;
	letter-spacing: 10%;
	text-align: center;
	color: #B58C67;
}

#featur-prods .featur-wrap {
	display: flex;
	justify-content: space-between;
}

#featur-prods .prod-wrapper {
	position: relative;
	width: 32.5%;
}

#featur-prods .prod-wrapper:nth-of-type(1),
#featur-prods .prod-wrapper:nth-of-type(3) {
	margin-top: 30px;
	margin-bottom: 30px;
}

#featur-prods .featur-img {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

#featur-prods .img-wrap {
	height: 340px;
}

#featur-prods .prod-wrapper:nth-of-type(2) .img-wrap {
	height: 400px;
}

#featur-prods .prod-name {
	position: absolute;
	left: 10px;
	bottom: -10px;
	text-transform: uppercase;
	color: white;
}


/* Footer */

#shopify-section-footer, 
.footer {
	background-color: #0E1F2A;
	color: #B58C67;
}

.footer .footer__content-top {
	width: 1040px;
}

.footer .footer__blocks-wrapper {
	display: flex;
}

.footer .footer-block {
	width: 25%;
	height: 180px;
}

.footer .footer-block:nth-of-type(1) {
	border-right: 1px solid #B58C67;
}

.footer .footer-block:nth-of-type(2) {
	width: 50%;
}

.footer .footer-block:nth-of-type(3) {
	border-left: 1px solid #B58C67;
	text-align: right;
}

.footer .footer-block a,
.footer .footer-block h2 {
	color: #B58C67;
}

.footer .footer-block a:hover {
	color: #deb897;
	text-decoration: none;
}

.footer .newsletter-form__field-wrapper .field__label {
	color: #B58C67;
}

.footer .footer-block a {
	font-family: 'Montserrat', sans-serif;
	font-weight: 500;
	font-size: 14px;
	line-height: 17px;
}

.footer .footer-block:nth-of-type(1) a {
	text-transform: uppercase;
}

.footer .list-unstyled {
	margin-top: 30px;
}

.footer .list-unstyled li {
	margin-bottom: 20px;
	margin-right: 0 !important;
}

.footer .footer-block h2 {
	width: 400px;
	margin: auto;
	margin-top: 20px;
	margin-bottom: 30px;
	font-family: 'Montserrat', sans-serif;
	font-weight: 500;
	font-size: 20px;
	line-height: 28px;
}

.footer #NewsletterForm--footer {
	background-color: #3b3b3b;
	color: #B58C67;
}

.footer .newsletter-form__field-wrapper .field:after,
.footer .field:hover.field:after, 
.footer .field__input:focus-visible {
	-webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
}

.footer .title-foo {
	position: relative;
	margin-bottom: 15px;
	border-bottom: 1px solid #B58C67;
}

.footer .title-foo-paragr {
	position: absolute;
	top: -35px;
	left: 50%;
	-webkit-transform: translateX(-50%);
	-moz-transform: translateX(-50%);
	transform: translateX(-50%);
	padding-right: 20px;
	padding-left: 20px;
	background-color: #0E1F2A;
	font-family: 'Playfair Display', serif;
	font-size: 20px;
	line-height: 27px;
	font-weight: 500;
	letter-spacing: 4%;
}

.footer .copyright__content a:hover {
	color: #deb897;
	text-decoration: none;
}
