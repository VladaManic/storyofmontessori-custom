body {
	font-family: 'Montserrat', sans-serif;
}

#story-of-montessory {
	background-color: #ECE5DB;;
	color: #B58C67;
}

.container-custom {
	width: 1100px;
	margin: auto;
}


/* Home text section */

#home-text .row {
	text-align: center;
}

#home-text .compact-text {
	width: 440px;
	margin: auto;
	font-size: 18px;
	line-height: 27px;
	font-weight: 500;
	letter-spacing: 12%;
	text-transform: uppercase;
}


/* Featured products section */

#featur-prods h2 {
	text-align: center;
	color: #B58C67;
}

#featur-prods .featur-wrap {
	display: flex;
	justify-content: space-between;
}

#featur-prods .prod-wrapper {
	width: 32.5%;
}

#featur-prods .featur-img {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

#featur-prods .img-wrap {
	height: 340px;
}

#featur-prods .prod-wrapper:nth-of-type(1) .img-wrap,
#featur-prods .prod-wrapper:nth-of-type(3) .img-wrap {
	margin-top: 30px;
}

#featur-prods .prod-wrapper:nth-of-type(2) .img-wrap {
	height: 400px;
}

